<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoixFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/typeSpinnerLabel"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_view"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/melodySpinnerLabel"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_view"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/styleSpinnerLabel"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_view"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Spinner
            android:id="@+id/TypeSpinner"
            style="@android:style/Widget.DeviceDefault.Spinner"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="false"
            android:animationCache="false"
            android:popupBackground="@drawable/blue_outline"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/MelodySpinner"
            style="@android:style/Widget.DeviceDefault.Spinner"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:popupBackground="@drawable/blue_outline"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/StyleSpinner"
            style="@android:style/Widget.DeviceDefault.Spinner"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:popupBackground="@drawable/blue_outline"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/displayChordsText"
        android:layout_width="380dp"
        android:layout_height="142dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <CheckBox
            android:id="@+id/checkType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@android:drawable/btn_radio"
            android:gravity="center_horizontal|bottom"
            android:text="@string/select_by_type" />

        <CheckBox
            android:id="@+id/checkMelody"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@android:drawable/btn_radio"
            android:gravity="center_horizontal|bottom"
            android:text="@string/select_by_melody" />

        <CheckBox
            android:id="@+id/checkStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@android:drawable/btn_radio"
            android:gravity="center_horizontal|bottom"
            android:text="@string/select_by_style" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>